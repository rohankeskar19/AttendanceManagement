<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/parent_text_layout_notification">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:background="@color/colorWhite"
            android:id="@+id/requestTextView"
            android:textSize="20sp"
            android:padding="20dp"

            android:text="rohankeskar89@gmail.com"

            android:foreground="?attr/selectableItemBackground"
            android:focusable="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notification_classroom_name"
            android:textColor="@color/color_black"
            android:text="TEB"
            android:textSize="15sp"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="18dp"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_green"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="25dp"
            android:id="@+id/request_accept"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="25dp"
            android:id="@+id/request_reject"
            />




</RelativeLayout>